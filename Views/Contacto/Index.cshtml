@model IEnumerable<LCore.Models.Contacto>

@{
    Layout = "LCoreBase/LCoreViewsBase/_IndexBase";
    ViewData["Title"] = "Contactos";
}

@section ContentHeader{
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Gest√≠on de Contactos</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">Contactos</li>
                    </ol>
                </div>
            </div>
        </div>
    </section>
}
@section Actions{
    <div class="float-sm-right">
        <a class="btn btn-app">
            <i class="fas fa-plus fa-2x text-success"></i> Agregar
        </a>
    </div>

}

@section IndexContent{
    <table id="Table1" class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>
                    Nombre Completo
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TipoIdentificacion)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.NumeroIdentificacion)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FechaNacimiento)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Genero)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Localidad)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Activo)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model) {
                <tr>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.Id">
                            @Html.DisplayFor(modelItem => item.GetNombreCompleto)
                        </a>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TipoIdentificacion.Acronimo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NumeroIdentificacion)
                    </td>
                    
                    <td>
                        @Html.DisplayFor(modelItem => item.FechaNacimiento)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.GetNombreGenero)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Localidad.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Activo)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">
                            <i class="fas fa-pencil-alt"></i>
                            </a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">
                            <i class="fas fa-trash"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
                    