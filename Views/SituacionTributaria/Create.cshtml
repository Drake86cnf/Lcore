@model Lcore.Models.SituacionTributaria

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>
<body>

<h4>SituacionTributaria</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="LocalidadId" class="control-label"></label>
                <select asp-for="LocalidadId" class ="form-control" asp-items="ViewBag.LocalidadId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NombreAbreviado" class="control-label"></label>
                <input asp-for="NombreAbreviado" class="form-control" />
                <span asp-validation-for="NombreAbreviado" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Acronimo" class="control-label"></label>
                <input asp-for="Acronimo" class="form-control" />
                <span asp-validation-for="Acronimo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaCreado" class="control-label"></label>
                <input asp-for="FechaCreado" class="form-control" />
                <span asp-validation-for="FechaCreado" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaEditado" class="control-label"></label>
                <input asp-for="FechaEditado" class="form-control" />
                <span asp-validation-for="FechaEditado" class="text-danger"></span>
            </div>
